/** Caleb Knight
 * 1-bit register:
 * If load[t] == 1 then out[t+1] = in[t]
 *                 else out does not change (out[t+1] = out[t])
 */

CHIP Bit {
    IN in, load;
    OUT out;

    PARTS:
    Mux(a=lout2, b=in, sel=load, out=lout1);
    DFF(in=lout1, out=lout2, out=out);
}
